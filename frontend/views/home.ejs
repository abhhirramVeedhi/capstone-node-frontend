  <style>
    .hero {
      text-align: center;
      padding: 4rem 2rem;
      background: linear-gradient(135deg, #f0f0f5, #e8ecf5);
      color: #333;
      border-radius: 1rem;
      margin: 2rem auto;
      max-width: 800px;
      box-shadow: 0 10px 30px rgba(77, 140, 255, 0.1);
      animation: fadeIn 1s ease-in-out;
    }

    .hero h2 {
      font-size: 2.5rem;
      margin-bottom: 1rem;
      background: linear-gradient(90deg, #4d8cff, #6a9fff);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      animation: glow 2s ease-in-out infinite alternate;
    }

    .hero p {
      font-size: 1.2rem;
      margin-bottom: 2rem;
      color: #444;
    }

    .hero a {
      padding: 0.8rem 1.5rem;
      background: linear-gradient(90deg, #4d8cff, #6a9fff);
      color: #fff;
      border-radius: 2rem;
      text-decoration: none;
      font-weight: bold;
      transition: all 0.3s ease;
      box-shadow: 0 5px 15px rgba(77, 140, 255, 0.3);
      position: relative;
      overflow: hidden;
    }

    .hero a:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 20px rgba(77, 140, 255, 0.5);
    }

    .hero a::after {
      content: "";
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: rgba(255, 255, 255, 0.2);
      transform: rotate(45deg);
      transition: all 0.5s ease;
      opacity: 0;
    }

    .hero a:hover::after {
      opacity: 1;
      animation: shine 1s forwards;
    }

    .features {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 2rem;
      margin: 3rem auto;
      max-width: 1000px;
    }

    .feature-card {
      background: linear-gradient(135deg, #ffffff, #f0f0f5);
      border-radius: 1rem;
      padding: 1.5rem;
      flex: 1 1 250px;
      text-align: center;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      position: relative;
      overflow: hidden;
    }

    .feature-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 15px 30px rgba(77, 140, 255, 0.2);
    }

    .feature-card i {
      font-size: 2.5rem;
      color: #4d8cff;
      margin-bottom: 1rem;
    }

    .feature-card h3 {
      color: #4d8cff;
      margin-bottom: 0.5rem;
    }

    .feature-card p {
      color: #555;
      font-size: 0.9rem;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes glow {
      0% {
        text-shadow: 0 0 5px rgba(77, 140, 255, 0.3);
      }

      100% {
        text-shadow: 0 0 20px rgba(77, 140, 255, 0.5);
      }
    }

    @keyframes shine {
      0% {
        transform: translateX(-100%) rotate(45deg);
      }

      100% {
        transform: translateX(100%) rotate(45deg);
      }
    }
  </style>
</head>

